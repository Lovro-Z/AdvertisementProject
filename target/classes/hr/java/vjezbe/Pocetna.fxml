                          </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Poslovni Korisnici">
                          <items>
                            <MenuItem mnemonicParsing="false" onAction="#prikaziPretraguPoslovnihKorisnika" text="Pretraga" />
                              <MenuItem mnemonicParsing="false" onAction="#prikaziUnosPoslovnihKorisnika" text="Unos" />
                          </items>
                        </Menu>
                     </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Prodaja">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#prikaziPretraguProdaja" text="Pretraga" />
                        <MenuItem mnemonicParsing="false" onAction="#prikaziUnosProdaja" text="Unos" />
                    </items>
                  </Menu>
              </menus>
            </MenuBar>
         </children>
      </Pane>
   </top>
</BorderPane>
