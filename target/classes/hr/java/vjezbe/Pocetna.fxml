<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.java.vjezbe.Controller">
   <top>
      <Pane prefHeight="25.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <MenuBar maxHeight="-Infinity" maxWidth="-Infinity">
              <menus>
                <Menu mnemonicParsing="false" text="Artikli">
                  <items>
                        <Menu mnemonicParsing="false" text="Automobili">
